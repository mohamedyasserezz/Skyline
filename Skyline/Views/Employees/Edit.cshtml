@model Employee
<h1 class="alert alert-success text-center">Edit Employee</h1>
<button onclick="greetVisitor()" class="abc">Greet User</button>
<div class="row">
	<form method="post" asp-controller="Employees" asp-action="EditCurrent" class="col-4" enctype="multipart/form-data">
		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="ImagePath" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div>
			<label asp-for="FullName" class="form-table"></label>
			<input type="text" asp-for="FullName" class="form-control" />
			<span asp-validation-for="FullName" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="NationalId" class="form-table"></label>
			<input type="text" asp-for="NationalId" class="form-control" />
			<span asp-validation-for="NationalId" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="DepartmentId" class="form-table"></label>
			<select class="form-control" asp-for="DepartmentId"
					asp-items="@(new SelectList(ViewBag.AllDepartments,"Id", "Description"))">
				<option selected disabled value="0">Select a department...</option>
			</select>
		</div>
		<div>
			<label asp-for="Position" class="form-table"></label>
			<input type="text" asp-for="Position" class="form-control" />
			<span asp-validation-for="Position" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Salary" class="form-table"></label>
			<input type="text" asp-for="Salary" class="form-control" />
			<span asp-validation-for="Salary" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="BirthDate" class="form-table"></label>
			<input asp-for="BirthDate" class="form-control" />
			<span asp-validation-for="BirthDate" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="HiringDateTime" class="form-table"></label>
			<input asp-for="HiringDateTime" class="form-control" />
			<span asp-validation-for="HiringDateTime" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="AttendenceTime" class="form-table"></label>
			<input asp-for="AttendenceTime" class="form-control" />
			<span asp-validation-for="AttendenceTime" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="PhoneNumber" class="form-table"></label>
			<input asp-for="PhoneNumber" class="form-control" />
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="EmailAddress" class="form-table"></label>
			<input asp-for="EmailAddress" class="form-control" />
			<span asp-validation-for="EmailAddress" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="ConfirmEmailAddress" class="form-table"></label>
			<input asp-for="ConfirmEmailAddress" class="form-control" />
			<span asp-validation-for="ConfirmEmailAddress" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="SecretCode" class="form-table"></label>
			<input asp-for="SecretCode" class="form-control" />
			<span asp-validation-for="SecretCode" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="ConfirmSecretCode" class="form-table"></label>
			<input asp-for="ConfirmSecretCode" class="form-control" />
			<span asp-validation-for="ConfirmSecretCode" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Appraisal" class="form-table"></label>
			<input asp-for="Appraisal" class="form-control" />
			<span asp-validation-for="Appraisal" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="IsActive" class="form-table"></label>
			<input asp-for="IsActive" type="checkbox" />
			<span asp-validation-for="IsActive" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="ImageFile" class="form-table"></label>
			<input type="file" name="ImageFile" id="imageFile"
				   accept=".png,.jpg" class="form-control" />
		</div>
		<div class="mt-3">
			<label asp-for="Notes" class="form-table"></label>
			<input asp-for="Notes" class="form-control" />
		</div>
		<div>
			<button type="submit" class="btn btn-primary col-12 mt-1">Edit</button>
			<a asp-controller="Employees" asp-action="GetIndexView" class="btn btn-primary col-12 mt-1">Back to list</a>
		</div>
	</form>

	<div class="col-6">
		<img src="@Model.ImagePath" style="width:30rem;"   />
	</div>
</div>

<img src="" id="empImage" style="width:100%; aspect-ratio:1/1" class="card" />

@section Scripts {
	<script>
		function AddImage() {
			document.getElementById("empImage").src = window.URL.createObjectURL(document.getElementById("imageFile").files[0]);
		}
	</script>
}