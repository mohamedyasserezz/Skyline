@model Employee
<h1 class="alert alertalert-success text-center">Create Employee</h1>

<form method="post" asp-controller="Employees" asp-action="AddNew" class="col-6" enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div>
		<label asp-for="FullName" class="form-label ">Full Name</label>
		<input type="text" asp-for="FullName" class="form-control" />
		<span asp-validation-for="FullName" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="DepartmentId" class="form-label ">Departments</label>
		<select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.AllDepartments,"Id","Description"))">
			<option selected disabled> Select a department...</option>

		</select>

	</div>
	<div>
		<label asp-for="NationalId" class="form-label ">National Id</label>
		<input type="text" asp-for="NationalId" class="form-control" />
		<span asp-validation-for="NationalId" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Position" class="form-label "></label>
		<input type="text" asp-for="Position" class="form-control" />
		<span asp-validation-for="Position" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Salary" class="form-label ">Salary</label>
		<input type="number" asp-for="Salary" class="form-control" />
		<span asp-validation-for="Salary" class="text-danger"></span>
	</div>

	<div>
		<label asp-for="BirthDate" class="form-label "></label>
		<input asp-for="BirthDate" class="form-control" />
		<span asp-validation-for="BirthDate" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="HiringDateTime" class="form-label "></label>
		<input asp-for="HiringDateTime" class="form-control" />
		<span asp-validation-for="HiringDateTime" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="AttendenceTime" class="form-label "></label>
		<input asp-for="AttendenceTime" class="form-control" />
		<span asp-validation-for="AttendenceTime" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="PhoneNumber" class="form-label "></label>
		<input asp-for="PhoneNumber" class="form-control" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="EmailAddress" class="form-label "></label>
		<input asp-for="EmailAddress" class="form-control" />
		<span asp-validation-for="EmailAddress" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="ConfirmEmailAddress" class="form-label "></label>
		<input asp-for="ConfirmEmailAddress" class="form-control" />
		<span asp-validation-for="ConfirmEmailAddress" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="SecretCode" class="form-label "></label>
		<input asp-for="SecretCode" class="form-control" />
		<span asp-validation-for="SecretCode" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="ConfirmSecretCode" class="form-label "></label>
		<input asp-for="ConfirmSecretCode" class="form-control" />
		<span asp-validation-for="ConfirmSecretCode" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Appraisal" class="form-label "></label>
		<input asp-for="Appraisal" class="form-control" />
		<span asp-validation-for="Appraisal" class="text-danger"></span>
	</div>
	<div class="mt-3">
		<label asp-for="IsActive" class="form-label "></label>
		<input type="checkbox" asp-for="IsActive" />
		<span asp-validation-for="IsActive" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Notes" class="form-label "></label>
		<input asp-for="Notes" class="form-control" />
	</div>

	<div>
		<label asp-for="ImageFile" class="form-label"></label>
		<input type="file" name="imageFile" id="imageFile"
			   accept=".png,.jpg" class="form-control"
			   onchange="AddImage()"/>
			   
	</div>

	<div>
		<button type="submit" class="btn btn-primary col-4 mt-1" style="background-color:green;">Add</button>
		<a asp-controller="Employees" asp-action="GetIndexView" class="btn btn-primary col-4 mt-1" style="background-color:red;">Back</a>
		</div>

</form>


<img src="" id="empImage" style="width:100%; aspect-ratio:1/1" class="card" />

@section Scripts {
	<script>
		function AddImage() {
			document.getElementById("empImage").src = window.URL.createObjectURL(document.getElementById("imageFile").files[0]);
		}
	</script>
}
